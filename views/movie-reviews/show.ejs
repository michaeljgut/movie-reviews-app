<% include ../partials/boilerplate %>

<h1><%= movieReview.results[0].display_title %></h1>
<h2 class="critics-pick">Critics Pick: <%= movieReview.results[0].critics_pick %></h2>
<p><label>Summary:</label> <%= movieReview.results[0].summary_short %></p>
<p><label>Opening Date:</label> <%= movieReview.results[0].opening_date %></p>
<p><label>Publication Date:</label> <%= movieReview.results[0].publication_date%></p>
<p><label>Rating:</label> <%= movieReview.results[0].mpaa_rating %></p>
<p>
  <% if ("link" in movieReview.results[0]) { %>
    <a href="<%= movieReview.results[0].link.url %>">NY Times Movie Review</a>
  <% } else { %>
    <a href="<%= movieReview.results[0].link_url %>">NY Times Movie Review</a>
  <% } %>
</p>

<h3>Comments</h3>

<% comments.forEach((comment) => { %>
<p><a href="../comments/<%= comment.id %>/edit">By <%= comment.username %> - on <%= comment.date_entered %> -
  <%= comment.comment %></a></p>
<% }) %>

<p>
  <a href="../comments/new">Add a comment</a>
</p>

<script src="/src/show-main.js"></script>

<% include ../partials/end %>
